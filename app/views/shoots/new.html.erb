<% provide(:title, 'New Shoot') %>
<h1>New Shoot</h1>

<div class="row">
  <div class="col-xs-12 col-md-6 fcenter">
    <%= form_for(@shoot) do |f| %>
    <%= render 'shared/error_messages' %>

      <%= f.label :catagory %>
      <%= f.text_field :catagory %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :discription %>
      <%= f.text_field :discription %>

      <%= f.label :thumbnail %>
      <%= f.text_field :thumbnail %>

      <%= f.submit "Submit New Shoot", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>