<% provide(:title, 'New Shoot') %>
<h1>New Shoot</h1>

<div class="row">
  <div class="col-xs-12 col-md-6">
    <%= form_for @shoot, :html => {:multipart => true} do |f| %>
    <%= render 'shared/error_messages' %>
<p>
      <%= f.label :catagory %>
      <%= f.select(:catagory, options_for_select([['Event', 'events'], ['Children', 'children'], ['Maternity', 'maternity' ], ['Family' , 'family'], ['Couples', 'couples'], ["New Born", "newborn"]])) %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :discription %>
      <%= f.text_field :discription %>
      </p>
<p>
      <%= f.label :thumbnail %>
      <%= f.file_field :thumbnail %>
</p>  
    <p>  <%= f.submit "Submit New Shoot", class: "btn btn-large btn-primary" %></p>
    <% end %>
  </div>
</div>