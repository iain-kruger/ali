<p id="notice"><%= notice %></p>

<h1>News</h1>

<div class="post-outer-pig"><%= paginate @blogs %></div>

	
	<div class="image-bar-outer">
			<% @blogs.reverse.each do |post| %>
		<div class="post-outer">
			<div class="post-title">
				<h1><%= post.title %></h1>
			</div>
			
			<div class="post-body">
				<h2><%= post.body %></h2>
			</div>

			<div class="post-image">
				<%= image_tag post.image_url.to_s %>
			</div>		
	</div>
<% end %>
  </div> 

