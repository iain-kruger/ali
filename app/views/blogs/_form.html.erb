<%= form_for (@blog), :html => {:multipart => true} do |f| %>
  
    <%= f.label :title %>
    <%= f.text_field  :title %>
    
    <%= f.label :body %>
    <%= f.text_area :body%>

    <%= f.label :image %>
    <%= f.file_field :image%>

 <p>  <%= f.submit "Submit", class: "btn btn-large btn-primary" %></p>

<% end %>

